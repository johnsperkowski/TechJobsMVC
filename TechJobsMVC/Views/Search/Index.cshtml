<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key == 'all'" />
                    <label for="@column.Key">@column.Value</label>
                </span>
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" value="@ViewBag.searchString" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    @{
        //TODO #4: Loop over the search results to display all job fields.
    }

    @if (ViewBag.jobs != null)
    {
        <h1>@ViewBag.title</h1>

        <table class="job-listing">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Employer</th>
                <th>Location</th>
                <th>Position Type</th>
                <th>Skill</th>
            </tr>
            @foreach (var job in ViewBag.jobs)
            {
                <tr>
                    <th>
                        @job.Id
                    </th>
                    <th>
                        @job.Name
                    </th>
                    <th>
                        <a asp-controller="List" asp-action="Jobs" asp-route-column="employer" asp-route-value="@job.Employer">@job.Employer</a>
                    </th>
                    <th>
                        <a asp-controller="List" asp-action="Jobs" asp-route-column="location" asp-route-value="@job.Location">@job.Location</a>
                    </th>
                    <th>
                        <a asp-controller="List" asp-action="Jobs" asp-route-column="positionType" asp-route-value="@job.PositionType">@job.PositionType</a>
                    </th>
                    <th>
                        <a asp-controller="List" asp-action="Jobs" asp-route-column="coreCompetency" asp-route-value="@job.CoreCompetency">@job.PositionType</a>
                    </th>
                </tr>
            }
        </table>
    }

</div>